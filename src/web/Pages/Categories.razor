@page "/categories"
@inject NavigationManager _navigationManager
@inject IJSRuntime _jsRuntime


<div class="text-center">

    <div>
        <div class="jumbotron">
            <h3>Categories</h3>
            <br />
            <div class="row">
                <div class="col-sm-6">
                    <h5 class="text-left">Receipts</h5>
                    <table class="table table-striped table-bordered table-sm">
                        <tr>
                            <th class="text-center">Name</th>
                            <th class="text-right">Sum</th>
                            <th class="text-center">Actions</th>
                        </tr>
                        @foreach (var item in receipts)
                        {
                            <tr>
                                <td class="text-center">@item.Name</td>
                                <td class="text-right">@item.Sum</td>
                                <td class="text-center">
                                    <form asp-action="Delete" method="post">
                                        <a asp-action="EditReceipts" class="btn btn-sm btn-outline-dark"
                                           asp-route-Id="@item.Id">
                                            <i style='font-size:14px' class='far'>&#xf044;</i>

                                        </a>
                                        <input type="hidden" name="Id" value="@item.Id" />
                                        @*<button type="submit" class="btn btn-danger btn-sm">
                                                Delete
                                            </button>*@
                                    </form>
                                </td>
                            </tr>
                        }
                    </table>
                    <div class="text-left">
                        <a asp-action="EditReceipts" asp-route-Id="0" class="btn btn-primary">Add Category</a>
                    </div>
                </div>
                <div class="col-sm-6">
                    <h5 class="text-left">Expenditures</h5>
                    <table class="table table-striped table-bordered table-sm">
                        <tr>
                            <th class="text-center">Name</th>
                            <th class="text-right">Sum</th>
                            <th class="text-center">Actions</th>
                        </tr>
                        @foreach (var item in expenditures)
                        {
                            <tr>
                                <td class="text-center">@item.Name</td>
                                <td class="text-right">@item.Sum</td>
                                <td class="text-center">
                                    <form asp-action="Delete" method="post">
                                        <a class="btn btn-sm btn-outline-dark">
                                            <i @onclick="(() => EditExpenditure(item.Id))" style='font-size:14px' class='far'>&#xf044;</i>
                                        </a>
                                        <input type="hidden" name="Id" value="@item.Id" />
                                        <button class="btn btn-danger btn-sm">
                                            <i @onclick="(() => DeleteExpenditure(item.Id))" style='font-size:14px' class='far'>&#xf044;</i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </table>
                    <div class="text-left">
                        <a asp-action="EditExpenditures" asp-route-Id="0" class="btn btn-primary">Add Category</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



